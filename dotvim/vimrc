set nocompatible              " be iMproved, required
filetype off                  " required

set rtp+=~/.vimplugins/Vundle.vim
call vundle#begin('~/.vimplugins')

if filereadable(expand("~/.vim_bundles.local"))
  source ~/.vim_bundles.local
endif

